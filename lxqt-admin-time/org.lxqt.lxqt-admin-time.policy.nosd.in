<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

  <action id="org.lxqt.lxqt-admin-time.pkexec">
    <message>Authentication is required for time administration</message>
    <message xml:lang="ru">Для изменения настроек даты и времени требуется аутентификация</message>
    <icon_name>preferences-system</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">${CMAKE_INSTALL_PREFIX}/bin/lxqt-admin-time-helper</annotate>
  </action>

</policyconfig>
